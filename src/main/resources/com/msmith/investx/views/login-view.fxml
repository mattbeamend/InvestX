<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="500.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.msmith.investx.controller.LoginController">
   <children>
      <VBox alignment="CENTER" layoutX="56.0" layoutY="112.0" prefHeight="200.0" prefWidth="188.0" spacing="10.0">
         <children>
            <Label text="Login" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <TextField fx:id="username" prefHeight="30.0" prefWidth="188.0" promptText="Username" />
            <PasswordField fx:id="password" prefHeight="30.0" prefWidth="188.0" promptText="Password" />
            <Button mnemonicParsing="false" onAction="#onLoginButtonClick" prefHeight="35.0" prefWidth="188.0" style="-fx-background-color: orange; -fx-background-radius: 15;" text="Sign In" />
            <Hyperlink onAction="#onSignUpClick" text="Don't have an account? Sign Up" />
         </children>
      </VBox>
   </children>
</AnchorPane>
